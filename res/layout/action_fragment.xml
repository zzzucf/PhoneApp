<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/LblActionName"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/BtnRecord"
        android:layout_alignBottom="@+id/BtnRecord"
        android:layout_alignParentLeft="true"
        android:text="@string/label_action_name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/BtnPlay"
        style="@style/AppBaseTheme"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="PlayClick"
        android:text="@string/label_play" />

    <Button
        android:id="@+id/BtnRecord"
        style="@style/AppBaseTheme"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/BtnPlay"
        android:text="@string/label_record" />

</RelativeLayout>